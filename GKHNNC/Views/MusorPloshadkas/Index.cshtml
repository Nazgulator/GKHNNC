            {
                Obiem += $('#' + i).val() + ";";
                Kontainers += $('#K_' + i).val() + ";";

            }
            Obiem = Obiem.slice(0, Obiem.length - 1);
            Kontainers = Kontainers.slice(0, Kontainers.length - 1);
            var Id = $('#IdPloshadki').val();
            var UL = $('#UL').val();
            var MKD = $('#MKD').val();
           // var TKO = $('#TKO').attr('checked');
