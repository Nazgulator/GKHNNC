                $.post('@Url.Action("AddMusorPloshadka", "MusorPloshadkas")', { Id: Id, UL: UL, MKD: MKD,  StreetId: StreetId, Obiem: Obiem, Name: Name, Kontainers: Kontainers, TypeId: TypeId, KontainerObiem: KontainerObiem }
