
@{
    ViewBag.Title = "Новый пароль";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("AddPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Форма смены пароля</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" }) 
<div class="form-group">
    Новый пароль
    <div class="col-md-10">
        <input name="NewPassword" id="NewPassword" class="form-control" type="text" />
    </div>
    <input name="UserId" id="UserId" class="form-control" value="@ViewBag.UserId" type="text" readonly />
</div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Смена пароля" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}