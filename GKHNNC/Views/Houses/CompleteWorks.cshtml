        var GO = confirm('Вы уверены, что хотите создать новый осмотр? ')
        if (GO) {
           
            /**/
            window.location.replace('/Osmotrs/Create?id='+id+'&date=' + date+'&NewOsmotr=true');
    /**/

}
}
</script>