@model IEnumerable<GKHNNC.Models.KontrAgent>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout0.cshtml";
}

<h2>Главная</h2>
@if (User.Identity.Name.Equals("Полигон") == false)
{
    <p>
        @Html.ActionLink("Создать", "Create", null, new { @class = "btn btn-success btn-block" })
    </p>
}
    <table id="T" class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @if (User.Identity.Name.Contains("Полигон") == false)
                {
                    <td>
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                    </td>
                }
            </tr>
        }

    </table>
    <p><a href="/Poligons/Index" class="btn btn-success btn-block">К управлению полигоном &raquo;</a> </p>
    <p><a href="/Home/Index" class="btn btn-success btn-block">В главное меню &raquo;</a> </p>
