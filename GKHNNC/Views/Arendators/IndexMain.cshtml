@model IEnumerable<GKHNNC.Models.Arendator>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Создать", "Create", null, new {@class = "btn btn-success btn-block"})
    </p>
    <table id="T" class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adres.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ploshad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teplota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotWater)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColdWater)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adres.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ploshad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teplota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotWater)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColdWater)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
    <p><a href="/Home/Index" class="btn btn-success btn-block">В главное меню &raquo;</a> </p>
