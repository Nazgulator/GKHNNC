@model IEnumerable<GKHNNC.Models.DOMOtoplenie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout0.cshtml";
}

<h2>Главная</h2>

<p>
    @Html.ActionLink("Создать", "Create", null, new {@class = "btn btn-success btn-block"})
</p>
<table id="T" class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Adress.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaterialOtop1.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaterialOtop2.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaterialOtopTrub.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaterialTeplo.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IznosOtop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VvodsOtop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Adress.Adress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaterialOtop1.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaterialOtop2.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaterialOtopTrub.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaterialTeplo.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IznosOtop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VvodsOtop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<p><a href="/Home/Index" class="btn btn-success btn-block">В главное меню &raquo;</a> </p>
