@model GKHNNC.Models.TypeAvto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout0.cshtml";
}

<h2>Редактировать</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            
                <div class="col-md-12>
                    @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>

            
            <div class="col-md-12>

                @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-12">
                Изображение
            </div>
            <div class="col-md-12">
                @Html.EditorFor(model => model.Ico, "ico", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ico, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-12">


                <img id="imag" src="~/Content/Images/1.png" class="img-responsive" height="64" width="128" data-toggle="tooltip" data-placement="top" title="Изображение">

            </div>

            <div class="row col-md-6 col-md-offset-3">
                <div class=" form-group">
                    <div class=" col-md-6  ">
                        @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-success btn-block" })
                    </div>
                    <div class=" col-md-6  ">
                        <input type="submit" value="Изменить" class="btn btn-success btn-block" />
                    </div>

                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/scripts/jquery-ui-1.12.1.min.js")
    @Scripts.Render("~/scripts/jquery-3.3.1.js")
    @Scripts.Render("~/Scripts/chosen.jquery.min.js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/validate.js")
    @Scripts.Render("~/scripts/jquery-ui-1.12.1.min.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive.min.js")





    <script>
        //поиск изображения в файлах и вывод
        $("#Ico").change(function () {
            var ico = $("#Ico").val();
            console.log("Ищем " + ico);
            $("#imag").attr("src", "../../Content/Images/" + ico + ".png") ;



        });

    </script>





}
