@model GKHNNC.Models.CompleteWork


@{
    ViewBag.Title = "CreateFirst";
}
<link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" />
<script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.js")' type="text/javascript"></script>
<head>
    <link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" />
</head>



@using (Html.BeginForm())
{
<center>
    @Html.AntiForgeryToken()
    <div class="container" style="width:100%">
        <div class="form-horizontal">
            <h2>Добавление выполненной работы</h2>
            @Html.HiddenFor(model => model.WorkDate)
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-12">
                <div class="form-group">


                    <label>Адрес</label>
                   
                    <input type="text" name="WorkAdress" id="WorkAdress" class="form-control" style="width: 365Px!important; min-width:365px;" data-autocomplete-source='@Url.Action("AutocompleteSearch", "CompleteWorks")' />
                    <script type="text/javascript">
                        $(function () {
                            $("[data-autocomplete-source]").each(function () {
                                var target = $(this);
                                target.autocomplete({ source: target.attr("data-autocomplete-source") });
                            });
                        });
                    </script>
                    <small id="AdressHelp" class="form-text text-muted">Начните вводить адрес дома ЗАГЛАВНЫМИ буквами.</small>
                    @Html.ValidationMessageFor(model => model.WorkAdress, "", new { @class = "text-danger" })
                </div>




                <div class="form-group">


                    <label>Группа</label>
                    @{
                        MultiSelectList MSL2 = new MultiSelectList(new string[] { "ТО конструктивных элементов", "ТО внутридомового инженерного оборудования" });
                    }

                    @Html.DropDownListFor(model => model.WorkGroup, MSL2, new { @class = "form-control", @style = "width:365Px !important; min-width:365px;" })
                    @Html.ValidationMessageFor(model => model.WorkGroup, "", new { @class = "text-danger" })
                </div>



                <div class="form-group">
                    
                        @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-success", style = "width: 180Px" })
                        <input type="submit" value="Далее" class="btn btn-success" style="width: 180Px" />

                   
                </div>
            </div>

        </div>
    </div>
</center>   
                    }

            


            @section Scripts {
                @Scripts.Render("~/Scripts/jquery-ui-1.12.1.js")
                @Scripts.Render("~/scripts/jquery-3.3.1.js")
                @Scripts.Render("~/bundles/jqueryval")
                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @Scripts.Render("~/scripts/validate.js")
                @Scripts.Render("~/scripts/jquery-ui-1.12.1.min.js")
                @Scripts.Render("~/scripts/jquery.unobtrusive.min.js")





            }
