@model GKHNNC.Models.ActiveElement

@{
    ViewBag.Title = "Spisok";
    Layout = "~/Views/Shared/_Layout0.cshtml";
}


<table class="table-bordered table-striped">

    @Html.Hidden("Date", Model.Date)
    @{
        string Sostoyanie = "Sostoyanie" + Model.Id;
        string Opisanie = "Opisanie" + Model.Id;
        string DefectId = "Defect" + Model.Id;
    }



    @if (Model != null)
    {
        
        for (int j = 0; j < Model.ActiveDefects.Count; j++)
        {


            <tr>
                <td>
                    @Model.ActiveDefects[j].Defect.Def
                </td>
                <td>
                    @Model.ActiveDefects[j].Sostoyanie
                </td>
                <td>
                    @Model.ActiveDefects[j].Opisanie
                </td>
                <td>
                    <button type="button" id="EditDefect" value="@Model.Id" class="btn btn-success">
                        Изменить дефект
                    </button>
                </td>
            </tr>

        }
    }

</table>

        



