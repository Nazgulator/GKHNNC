            @{ int progress = 0;
                double pro100 = ViewBag.DOMParts.Count;
                int procount = 0;
            }
            @for (int j = 0; j < ViewBag.DOMParts.Count; j++)
            {



                <div id="@j" class="row col-md-6 col-md-offset-3">
                    <div class="col-md-12">
