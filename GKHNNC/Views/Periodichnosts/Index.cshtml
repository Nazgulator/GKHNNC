@model IEnumerable<GKHNNC.Models.Periodichnost>

@{
    ViewBag.Title = "Периодичность";
}

<h2>Периодичность</h2>

<p>
    @Html.ActionLink("Добавить", "Create",null,new { @class = "btn btn-success", @style = "width: 100%" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PeriodichnostName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PeriodichnostName)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<a href="/Home/Index" class="btn btn-success" style="width: 100%">В главное меню</a>