@model IEnumerable<GKHNNC.Models.Schetchik>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout0.cshtml";
}



<h2>Главная</h2>

<p>
    <button class="btn btn-success btn-lg" style="width:500Px" data-toggle="modal" data-target="#Download" onclick="location.href='@Url.Action("Index", "Groups")'">
        <i class="glyphicon glyphicon-hand-left"></i> Группы счетчиков  &raquo;
    </button>
</p>
<p>
    <button class="btn btn-success btn-lg" style="width:500Px" data-toggle="modal" data-target="#Download" onclick="location.href='@Url.Action("Index", "SchetchikTips")'">
        <i class="glyphicon glyphicon-hand-left"></i> Типы счетчиков  &raquo;
    </button>
</p>
<p>
    @Html.ActionLink("Создать", "Create", null, new { @class = "btn btn-success btn-block" })
</p>

<table id="T" class="table table-bordered table-striped">

    @{ int AID = 0; }
    @foreach (var item in Model)
    {
        if (AID != item.AdresId)
        {
            AID = item.AdresId;
            <tr>
                <td colspan="7" style="border-color:lightgreen;text-align:center;background-color:lightgreen">
                    <h4>  @Html.DisplayFor(modelItem => item.Adres.Adress)</h4>
                </td>

            </tr>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Group.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tip.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Diameter)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateEnd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th></th>
            </tr>
        }
            <tr>


                <td>
                    @Html.DisplayFor(modelItem => item.Group.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tip.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Diameter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateEnd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            </tr>
    }

</table>
